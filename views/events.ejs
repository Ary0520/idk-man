<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events & Projects </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#FF4F7B',
                        'primary-light': '#FF7B9C',
                    },
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50">
    <!-- Navigation (same as landing page) -->
    <!-- <nav class="!bg-gradient-to-r fixed w-full px-6 lg:px-24 py-6 z-50 bg-white shadow-lg" id="mainNav"> -->
        <!-- ... Your existing navbar code ... -->
    <!-- </nav>  -->

    <!-- Page Header -->
    <header class="bg-gradient-to-r from-primary to-primary-light pt-20 pb-20 px-6 lg:px-24">
        <div class="max-w-[1320px] mx-auto">
            <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6">
                Find right Hotels, For you
            </h1>
            <p class="text-white/90 text-lg max-w-2xl">
                Find a
            </p>
        </div>
    </header>

    <!-- Search and Filter Section -->
    <div class="bg-white border-b">
        <div class="max-w-[1320px] mx-auto px-6 lg:px-24 py-6">
            <div class="flex flex-col lg:flex-row gap-4 items-center justify-between">
                <!-- Search Bar -->
                <div class="relative w-full lg:w-96">
                    <input type="text" 
                           placeholder="Search events..." 
                           class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/50">
                    <svg class="w-5 h-5 absolute right-3 top-3.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </div>

                <!-- Filters -->
                <div class="flex gap-4 w-full lg:w-auto">
                    <select class="px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/50 bg-white">
                        <option>All Categories</option>
                        <option>Education</option>
                        <option>Healthcare</option>
                        <option>Environment</option>
                        <option>Social Welfare</option>
                    </select>
                    <!-- <select class="px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/50 bg-white">
                        <option>All Locations</option>
                        <option>New York</option>
                        <option>London</option>
                        <option>Tokyo</option>
                        <option>Paris</option>
                    </select> -->
                </div>
            </div>
        </div>
    </div>

    <!-- Events Grid -->
    <main class="max-w-[1320px] mx-auto px-6 lg:px-24 py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Event Card 1 -->
            <% events.forEach((event)=>{ %>
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                    <img src="event1.jpg" alt="Event" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <div class="flex items-center gap-4 mb-4">
                            <span class="px-3 py-1 bg-primary/10 text-primary rounded-full text-sm">Education</span>
                            <span class="text-gray-500 text-sm">Mar 15, 2024</span>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-2"><%=event.title%> </h3>
                        <p class="text-gray-600 mb-4"><%= event.description %> </p>
                        <div class="flex items-center justify-between">
                            <span class="text-gray-500 text-sm">By Education For All</span>
                            <a href= <%= event.link %> >
                                <button class="text-primary hover:text-primary-light font-medium">Learn More â†’</button>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
            
            

            <!-- Add more event cards as needed -->
        </div>

        <!-- Load More Button -->
        <div class="text-center mt-12">
            <button class="px-8 py-3 bg-primary text-white rounded-lg font-medium hover:bg-primary-light transition duration-300">
                Load More Events
            </button>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white mt-20">
        <!-- ... Your existing footer code ... -->
    </footer>
    <footer class="bg-[#0B132A] text-white pt-24 pb-8 px-6 lg:px-24">
        <div class="max-w-[1320px] mx-auto">
            <!-- Main Footer Content -->
            <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 mb-16">
                <!-- Company Info -->
                <div class="lg:col-span-2">
                    <div class="flex items-center gap-3 mb-6">
                        <img src="logo.svg" alt="Appvilla" class="w-10 h-10">
                        <span class="text-2xl font-bold">Appvilla</span>
                    </div>
                    <p class="text-gray-400 mb-6">
                        Making the world a better place through constructing elegant hierarchies.
                    </p>
                    <p class="text-sm text-gray-500">
                        Designed and Developed by Uideck
                    </p>
                </div>
    
                <!-- Solutions -->
                <div>
                    <h3 class="text-lg font-semibold mb-6">Solutions</h3>
                    <ul class="space-y-4">
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Marketing</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Analytics</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Commerce</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Insights</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Promotion</a></li>
                    </ul>
                </div>
    
                <!-- Support -->
                <div>
                    <h3 class="text-lg font-semibold mb-6">Support</h3>
                    <ul class="space-y-4">
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Pricing</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Documentation</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Guides</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">API Status</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Live Support</a></li>
                    </ul>
                </div>
    
                <!-- Company -->
                <div>
                    <h3 class="text-lg font-semibold mb-6">Company</h3>
                    <ul class="space-y-4">
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">About Us</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Our Blog</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Jobs</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Press</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-primary transition">Contact Us</a></li>
                    </ul>
                </div>
            </div>
    
            <!-- Newsletter Section -->
            <div class="border border-gray-800 rounded-xl p-8 mb-16">
                <div class="flex flex-col lg:flex-row items-center justify-between gap-8">
                    <div>
                        <h3 class="text-2xl font-semibold mb-4">Subscribe To Our Newsletter</h3>
                        <p class="text-gray-400">The latest news, articles, and resources, sent to your inbox weekly.</p>
                    </div>
                    <div class="flex w-full lg:w-auto flex-col sm:flex-row gap-4">
                        <input 
                            type="email" 
                            placeholder="Your email address" 
                            class="px-6 py-4 bg-gray-800 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary w-full sm:w-80"
                        >
                        <button class="px-8 py-4 bg-primary rounded-lg font-medium hover:bg-opacity-90 transition whitespace-nowrap">
                            Subscribe
                        </button>
                    </div>
                </div>
            </div>
           
        </div>
    </footer>
</body>
</html> 